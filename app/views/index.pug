script.
  
  document.getElementById('quote-request-btn').addEventListener('click', (e) => {
      document.getElementsByClassName('modal')[0].classList.add('is-active');
      e.stopImmediatePropagation();
    })
  
    document.addEventListener('click', (e) => {
      if (document.getElementsByClassName('modal')[0].classList.contains('is-active') && (!e.target.closest('.modal-card') || e.target.classList.contains('close-modal-btn'))) {
        document.getElementsByClassName('modal')[0].classList.toggle('is-active')
      }
    })
  
    document.querySelector('.navbar-burger').addEventListener('click', () => {
      document.querySelector('.navbar-menu').classList.toggle('is-active');
    })
  